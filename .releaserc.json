{
  "branches": [
    "main",
    {"name": "develop", "prerelease": "dev"},
    {"name": "beta", "prerelease": "beta"},
    {"name": "alpha", "prerelease": "alpha"}
  ],
  "repositoryUrl": "https://github.com/glincker/glinrdock-core",
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits",
        "releaseRules": [
          {"type": "feat", "release": "minor"},
          {"type": "fix", "release": "patch"},
          {"type": "docs", "release": "patch"},
          {"type": "style", "release": "patch"},
          {"type": "refactor", "release": "patch"},
          {"type": "perf", "release": "patch"},
          {"type": "test", "release": "patch"},
          {"type": "build", "release": "patch"},
          {"type": "ci", "release": "patch"},
          {"type": "chore", "release": "patch"},
          {"type": "revert", "release": "patch"},
          {"type": "breaking", "release": "major"},
          {"scope": "no-release", "release": false}
        ]
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "presetConfig": {
          "types": [
            {"type": "feat", "section": "✨ Features"},
            {"type": "fix", "section": "🐛 Bug Fixes"},
            {"type": "docs", "section": "📚 Documentation"},
            {"type": "style", "section": "💎 Styles"},
            {"type": "refactor", "section": "🔨 Code Refactoring"},
            {"type": "perf", "section": "🚀 Performance Improvements"},
            {"type": "test", "section": "🧪 Tests"},
            {"type": "build", "section": "📦 Build System"},
            {"type": "ci", "section": "🔧 Continuous Integration"},
            {"type": "chore", "section": "🏠 Chores"},
            {"type": "revert", "section": "⏪ Reverts"},
            {"type": "breaking", "section": "💥 BREAKING CHANGES", "hidden": false}
          ]
        }
      }
    ],
    "@semantic-release/changelog",
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "./scripts/prepare-release.sh ${nextRelease.version}",
        "publishCmd": "./scripts/publish-release.sh ${nextRelease.version}"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["VERSION", "CHANGELOG.md", "web/ui-lite/package.json"],
        "message": "chore(release): v${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "dist/*.tar.gz",
            "name": "glinrdock-${nextRelease.version}-${env.OS}-${env.ARCH}.tar.gz",
            "label": "GLINRDOCK ${nextRelease.version} (${env.OS}-${env.ARCH})"
          },
          {
            "path": "dist/*.sha256",
            "name": "glinrdock-${nextRelease.version}-${env.OS}-${env.ARCH}.sha256",
            "label": "SHA256 Checksum"
          }
        ],
        "discussionCategoryName": "Releases"
      }
    ]
  ],
  "preset": "conventionalcommits"
}